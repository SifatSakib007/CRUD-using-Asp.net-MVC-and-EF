@using QuadTheoryLimited_Task.Models
@model Student


<div class=" p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Create Student Information</h2>
    </div>
</div>

<form method="post">
    <div class="form-group p-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group p-2">
        <label asp-for="Gender" class="control-label"></label>
        <div>
            <input type="radio" asp-for="Gender" value="Male" /> Male
            <input type="radio" asp-for="Gender" value="Female" /> Female
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group p-2">
        <label asp-for="DOB" class="control-label"></label>
        <input asp-for="DOB" class="form-control" type="datetime-local" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group p-2">
        <label asp-for="ClassId" class="control-label"></label>
        <select asp-for="ClassId" class="form-control">
            @foreach (var item in ViewBag.Classes as List<QuadTheoryLimited_Task.Models.Class>)
            {
                <option value="@item.Id">@item.Name</option> <!-- Display class name instead of ID -->
            }
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    
    <div class="row p-2">
        <div class="col-2">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        <div class="col-4">
            <a asp-controller="Portal" asp-action="Index" class="btn btn-secondary">Back To List</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}